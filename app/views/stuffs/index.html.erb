<p id="notice"><%= notice %></p>

<% unless @garrage.nil? %>
  <h1><%=@garrage.address%>의 stuff 목록</h1>
<% else %>
  <h1>전체 stuff 목록</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stuffs.each do |stuff| %>
      <tr>
        <td><%= stuff.image %></td>
        <td><%= stuff.title %></td>
        <td><%= stuff.content %></td>
        <td><%= stuff.price %></td>
        <td><%= stuff.status %></td>
        <td><%= link_to 'Show', garrage_stuff_path(stuff.garrage,stuff) %></td>
        <td><%= link_to 'Edit', edit_garrage_stuff_path(stuff.garrage,stuff) %></td>
        <td><%= link_to 'Destroy', garrage_stuff_path(stuff.garrage,stuff), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% unless @garrage.nil? %>
  <%= link_to 'New Stuff', new_garrage_stuff_path(@garrage) %>
<% end %>
